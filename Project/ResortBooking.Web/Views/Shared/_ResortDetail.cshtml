@model Resort

<div class="row">
    <div class="col-7 col-md-5 ">
        <img src="/@Model.ImageUrl" style="border-radius:5px;" height="350px" width="350px" />
    </div>
    <div class="col-5 col-md-7">
        <div class="row p-2">
            <div class="col-12">
                <p class="card-title text-warning" style="font-size: xx-large">@Model.Name</p>
                <p class="card-text" style="font-size:large">@Model.Description</p>
                @if (Model.ResortAmenity != null && Model.ResortAmenity.Count() > 0)
                {
                    <p class="h5 text-white">Villa Amenities</p>
                    <ul>
                        @foreach (var amenity in Model.ResortAmenity)
                        {
                            <li>@amenity.Name</li>
                        }
                    </ul>
                }

            </div>
        </div>
    </div>
    <div class="row col-12">
        <span class="text-end p-0 pt-3 m-0">
            <span class="float-right">Max occupancy: @Model.Occupancy adults</span><br />
            <span class="float-right pt-1">Resort Size: @Model.Sqft Sqft</span><br />
            <p class="text-warning font-weight-bold pt-1">
                Rs.
                <span style="#ff6a00;">
                    @Model.Price/night
                </span>
            </p>
        </span>
    </div>
</div>
